<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="#2e2e2e">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Background="#FF1E1E1E" 
                BorderBrush="#FF1E1E1E" 
                BorderThickness="0"                 
                CornerRadius="10,10,10,10"
                Margin="8,8,8,8"
                Padding="5,5,5,5">
            <Grid Grid.Column="0" 
                  Background="#FF1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.05*" MinHeight="30"/>
                    <RowDefinition Height="0.90*" />
                    <RowDefinition Height="0.05*" MinHeight="30"/>
                </Grid.RowDefinitions>

                
                    <Grid Grid.Row="0"
                          Background="#FF1E1E1E">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                        Background="#FF2E2E2E" 
                        BorderBrush="#FF2E2E2E" 
                        BorderThickness="1" 
                        CornerRadius="7,0,0,7"                    
                        Padding="2,2,2,2">  
                        <TextBox 
                                 Background="#FF2E2E2E"
                                 Foreground="White"
                                 Name="SearchTextBox"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 FontSize="17"
                                 KeyDown="SearchTextBox_KeyDown"
                                 BorderThickness="0"/>
                    </Border>
                    <Border Grid.Column="1"
                        Background="#3d3d3d" 
                        BorderBrush="#3d3d3d" 
                        BorderThickness="0" 
                        CornerRadius="0,7,7,0"                    
                        Padding="2">
                        <Button  
                            Name="SearchButton" 
                            Content="Search"
                            Click="SearchButton_Click"
                            BorderThickness="0"
                            Background="#3d3d3d"
                            Foreground="White"/>
                    </Border>
                    </Grid>

                <ScrollViewer Grid.Row="1"                             
                              VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="5">
                    <ScrollViewer.Resources>
                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">5</sys:Double>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background" Value="#FF2E2E2E"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="Transparent">
                                            <Track Name="PART_Track" IsDirectionReversed="true">
                                                <!-- Кнопки-ограничители убираем -->
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Visibility="Collapsed" IsEnabled="False"/>
                                                </Track.DecreaseRepeatButton>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Visibility="Collapsed" IsEnabled="False"/>
                                                </Track.IncreaseRepeatButton>

                                                <!-- Сам ползунок -->
                                                <Track.Thumb>
                                                    <Thumb Background="#3d3d3d"                                                           />
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style TargetType="Thumb">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Thumb">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel Name="TaskList"
                                Margin="10,5,10,5"
                                CanVerticallyScroll="True"/>
                </ScrollViewer>

                <Border Grid.Row="2"
                    Background="#3d3d3d" 
                    BorderBrush="#3d3d3d" 
                    BorderThickness="1"                 
                    CornerRadius="7"
                    Margin="2"
                    Padding="2">
                    <Button Name="AddButton" 
                            BorderThickness="0"
                            Click="AddNewTask" 
                            Content="Add"
                            Background="#3d3d3d"
                            Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" 
               Background="#FF1E1E1E"
               ShowsPreview="False" Width="5"
               HorizontalAlignment="Center" 
               VerticalAlignment="Stretch" />

        <Border Grid.Column="2"
            Background="#FF1E1E1E" 
            BorderBrush="#FF1E1E1E" 
            BorderThickness="0"                 
            CornerRadius="10"
            Margin="8"
            Padding="5">
            <Grid  Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" MinHeight="50"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.05*" MinHeight="30"/>                
            </Grid.RowDefinitions>

                <Border 
                    Grid.Row="0" 
                    Background="#FF2E2E2E" 
                    BorderBrush="#FF2E2E2E" 
                    BorderThickness="1" 
                    CornerRadius="10,10,0,0"                    
                    Padding="3">  
                    <TextBox 
                        Background="#FF2E2E2E"
                        Foreground="White"
                        BorderThickness="0"
                        Name = "TaskTitlen" 
                        FontSize="30"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left"
                        KeyDown="TaskTextBox_KeyDown"/>
                </Border>
                <Border 
                    Grid.Row="1"                     
                    Background="#FF2E2E2E" 
                    BorderBrush="#FF2E2E2E" 
                    BorderThickness="1" 
                    CornerRadius="0,0,10,10"                    
                    Padding="3"
                    Margin="0,5,0,5">
                    <TextBox 
                         Background="#FF2E2E2E"
                         Foreground="White"
                         BorderThickness="0"
                         Name = "TaskDescription"
                         FontSize="20"
                         AcceptsReturn="True" 
                         TextWrapping="Wrap"                     
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="TaskTextBox_KeyDown"/>
                </Border>
                <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" 
                        Background="#3d3d3d" 
                        BorderBrush="#3d3d3d" 
                        BorderThickness="1"                 
                        CornerRadius="7,0,0,7"
                        Margin="1"
                        Padding="2">
                        <Button
                            Background="#3d3d3d"
                            Foreground="White"
                            BorderThickness="0"
                            Name="SaveButton" 
                            Click="SaveButton_Click" 
                            Content="Save"/>
                    </Border>
                    <Border Grid.Column="1" 
                        Background="#3d3d3d" 
                        BorderBrush="#3d3d3d" 
                        BorderThickness="1"                 
                        CornerRadius="0,7,7,0"
                        Margin="1"
                        Padding="2">
                        <Button 
                            Background="#3d3d3d"
                            Foreground="White"
                            BorderThickness="0"
                            Name="DeleteButton"
                            Click="OnDeleteTask"
                            Content="Delete"/>
                    </Border>
            </Grid>
        </Grid>
        </Border>
            
    </Grid>
</Window>
